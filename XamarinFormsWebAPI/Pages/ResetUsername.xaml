<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinFormsWebAPI.Pages.ResetUsername">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="txtRUsername"  Placeholder="Current Username"/>
            <Entry x:Name="txtResetUsername"  Placeholder="New Username"/>
            <Entry x:Name="txtOTP"  Placeholder="OTP"/>
            <Entry  x:Name="txtRPassword"   IsPassword="True"  Placeholder="New Password"/>
            <Entry  x:Name="txtRConfirmPassword"   IsPassword="True"  Placeholder="Confirm Password"/>
            <Button x:Name="btnSendOTP"  Text="Get OTP" BackgroundColor="#3897F0" TextColor="White" HeightRequest="50" VerticalOptions="Start" />
            <Button x:Name="btnResertUsername"  Text="Reset Username" BackgroundColor="#3897F0" TextColor="White" HeightRequest="50" VerticalOptions="Start" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>